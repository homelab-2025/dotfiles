	email = gl@enzog.mozmail.com
[init]
	defaultBranch = main
[core]
	editor = code --wait
	#windows
	autocrlf = true
	#linux
	#autocrlf = input
[grep]
	lineNumber = true
[alias]
	cm = commit -m
	l = log --graph --pretty=format:\"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset\" --abbrev-commit
	s = status